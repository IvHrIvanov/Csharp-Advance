using System;
using System.Collections.Generic;
using System.Linq;

namespace _07.Truck_Tour
{
    class Program
    {
        static void Main(string[] args)
        {

            int n = int.Parse(Console.ReadLine());
            Queue<int> fuel = new Queue<int>();
            Queue<int> distance = new Queue<int>();


            for (int i = 0; i < n; i++)
            {
                int[] input = Console.ReadLine()
                    .Split(" ")
                    .Select(int.Parse)
                    .ToArray();

                fuel.Enqueue(input[0]);
                distance.Enqueue(input[1]);

            }


            int fuelSum = 0;
            int distanceSum = 0;
            n--;
            while (fuel.Count > 0)
            {
                fuelSum = fuel.Dequeue();
                distanceSum = distance.Dequeue();
                if (fuelSum > distanceSum)
                {
                    fuelSum -= distanceSum;                 

                }


            }
            Console.WriteLine(n);
        }
    }
}
